<%- include('partials/nav') -%>

<div class="flex flex-grow flex-col items-center justify-start w-full gap-10">
    <div class="w-[80%] flex items-center justify-center h-[5rem] bg-[#1F252D] rounded-lg">
        <div class="w-[90%] flex items-center justify-between text-white">
            <p>My Links</p>
            <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">Sort By <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                </svg>
            </button>
        </div>
        <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
              <li>
                <a href="#" class="block px-4 py-2 ">New First</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 ">Old First</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 ">Most Visits</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 ">Least Visits</a>
              </li>
            </ul>
        </div>
    </div>

    <div class="flex flex-col items-center justify-center w-[80%]">
        <div class="flex items-center justify-center w-full bg-[#1F252D] rounded-t-lg">
            <div class="w-[80%] flex items-center justify-between h-[4rem] text-[#797979]">
                <div class="flex items-center justify-center gap-20">
                    <p>Sr. no.</p>
                    <p>Link</p>
                </div>
                <p>Visits</p>
            </div>
        </div>

        <% links.forEach((link, index) => { %>
            <div class="flex items-center justify-center h-[3rem] <%= index % 2 === 0 ? 'bg-[#181D23]' : 'bg-[#1F252D]' %> w-full text-white">
                <div class="flex items-center justify-between w-[80%]">
                    <div class="flex items-center justify-center gap-20">
                        <p><%= index + 1 %></p>
                        <a class="hover:text-blue-600" href="/analyse/<%= link.redirectString %>"><%= link.url.substring(0, 50) %>...</a>
                    </div>
                    <p><%= link.visits.reduce((total, visit) => total + visit.count, 0) %></p> <!-- Sum up all visits for this link -->
                </div>
            </div>
        <% }) %>
    </div>
</div>
<script>
    const closePopupButton = document.getElementById('closePopup');
    const bg = document.getElementById('bg-segs')
 
    const togglePopup = () => {
      popup.classList.toggle('hidden');
      bg.classList.toggle('blur-sm')
  
    };
  
    const popupButton = document.getElementById('popup');
    popupButton.addEventListener('click', togglePopup);
  </script>
  
